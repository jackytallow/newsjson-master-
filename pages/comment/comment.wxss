.comment-detail-box{
  position: absolute;
  top:0;
  left: 0;
  bottom: 0;
  right: 0;
  /*width: 100%;*/
  /*height: 100%;*/
  overflow-y:hidden;
}
.comment-main-box{
  position: absolute;
  top:0;
  left: 0;
  bottom: 100rpx;
  right: 0;
  overflow-y:auto;
  -webkit-overflow-scrolling:touch;
  padding: 20rpx;
}
.comment-title{
  font-size: 32rpx;
  border-bottom: 1px solid #A53A39;
  padding: 10rpx 0 15rpx 0;
  color: #222;
}
.comment-main-box{
  margin-top: 10rpx;
}
.comment-item{
  display: flex;
  margin-left:20rpx;
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx 20rpx 20rpx 0;
}
.comment-item:last-child{
  border-bottom: none;
}
.avatar{
  height: 50rpx;
  width:50rpx;
  border-radius: 25rpx;
}
.comment-body{
  flex: 1;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.user-name{
  color: #406599;
  margin-bottom: 18rpx;
}
.comment-txt{
  color: #222;
  line-height: 40rpx;
}

/*评论框*/

.input-box{
  position: absolute;
  bottom: 0;
  left:0;
  right: 0;
  background-color: #EAE8E8;
  border-top:1rpx solid #D5D5D5;
  z-index: 1000;
  display: flex;
  padding: 10rpx 0;
  height: 75rpx;
}
.input-main-box {
  flex:1;
  padding-left:4rpx;
}
.input-main-box input{
  width: 94%;
  border: 1rpx solid #D5D5D5;
  background-color: #fff;
  border-radius: 3px;
  height: 60rpx;
  margin: 5rpx 0;
  font-size: 24rpx;
  color: #838383;
  padding: 0 2%;
}
.submit-btn{
  font-siz: 24rpx;
  margin-top: 5rpx;
  margin-right: 8rpx;
  line-height: 60rpx;
  width: 120rpx;
  height: 60rpx;
  background-color: #3f404c;
  border-radius:5rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}